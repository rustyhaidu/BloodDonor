<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tab4"
    android:gravity="center"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"

        tools:context="com.parse.starter.RegisterDonor"
        android:orientation="vertical"
       >

        <EditText android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:id="@+id/name"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/city"
            android:layout_alignStart="@+id/city" />
        <EditText android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City"
            android:id="@+id/city"
            android:layout_below="@+id/name"
            android:layout_alignLeft="@+id/blood_group"
            android:layout_alignStart="@+id/blood_group" />
        <EditText android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/blood_group"
            android:hint="Blood Group"
            android:layout_below="@+id/city"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/blood_rh"
            android:layout_alignStart="@+id/blood_rh" />

        <EditText android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/blood_rh"
            android:hint="RH"
            android:layout_below="@+id/blood_group"
            android:layout_alignLeft="@+id/saveButton"
            android:layout_alignStart="@+id/saveButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/saveButton"
            android:padding="10dp"
            android:text="Save"
            android:onClick=""
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="135dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Name"
            android:id="@+id/textView"
            android:layout_alignBottom="@+id/name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/name"
            android:layout_toStartOf="@+id/name"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="City"
            android:id="@+id/textView2"
            android:layout_alignTop="@+id/city"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="RH"
            android:id="@+id/textView3"
            android:layout_alignTop="@+id/blood_rh"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="BloodGroup"
            android:id="@+id/textView4"
            android:layout_alignTop="@+id/blood_group"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:hint="RH"
            android:layout_below="@+id/blood_rh"
            android:layout_alignLeft="@+id/blood_rh"
            android:layout_alignStart="@+id/blood_rh" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="RH"
            android:id="@+id/textView5"
            android:layout_alignBottom="@+id/editText"
            android:layout_below="@+id/editText"
            android:layout_alignRight="@+id/textView2"
            android:layout_alignEnd="@+id/textView2" />

    </RelativeLayout>

</LinearLayout>