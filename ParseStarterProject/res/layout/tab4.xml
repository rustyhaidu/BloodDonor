<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tab4"

    android:weightSum="1">

<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="294dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"

        tools:context="com.parse.starter.RegisterDonor"
        android:orientation="vertical"
        android:layout_weight="0.55">

        <EditText android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:id="@+id/name"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/city"
            android:layout_alignEnd="@+id/city"
            android:layout_alignLeft="@+id/blood_rh"
            android:layout_alignStart="@+id/blood_rh" />
        <EditText android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="City"
            android:id="@+id/city"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView2" />
        <EditText android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blood_group"
            android:hint="Blood Group"
            android:layout_below="@+id/blood_rh"
            android:layout_alignRight="@+id/city"
            android:layout_alignEnd="@+id/city" />

        <EditText android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blood_rh"
            android:hint="RH"
            android:layout_below="@+id/city"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/blood_group"
            android:layout_alignStart="@+id/blood_group" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Name"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView5"
            android:layout_toEndOf="@+id/textView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="City"
            android:id="@+id/textView2"
            android:layout_below="@+id/name"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="RH"
            android:id="@+id/textView3"
            android:layout_alignBottom="@+id/blood_rh"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="BloodGroup"
            android:id="@+id/textView4"
            android:layout_above="@+id/textView7"
            android:layout_toRightOf="@+id/textView5"
            android:layout_toEndOf="@+id/textView5" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etType"
            android:hint="Type"
            android:layout_below="@+id/blood_group"
            android:layout_alignLeft="@+id/blood_group"
            android:layout_alignStart="@+id/blood_group"
            android:layout_alignRight="@+id/blood_group"
            android:layout_alignEnd="@+id/blood_group" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="RH"
            android:id="@+id/textView5"
            android:layout_alignBottom="@+id/etType"
            android:layout_below="@+id/etType"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Type"

            android:id="@+id/textView7"
            android:layout_below="@+id/blood_group"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Validity"
            android:id="@+id/textView6"
            android:layout_below="@+id/etType"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etValidity"
            android:hint="Validity"
            android:layout_alignTop="@+id/textView5"
            android:layout_alignRight="@+id/etType"
            android:layout_alignEnd="@+id/etType"
            android:layout_alignLeft="@+id/blood_group"
            android:layout_alignStart="@+id/blood_group" />

    </RelativeLayout>

</ScrollView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/saveButton"
        android:padding="10dp"
        android:text="Save"
        android:onClick=""
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="135dp" />


</LinearLayout>